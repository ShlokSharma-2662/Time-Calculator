{
    "manifest_version": 3,
    "name": "WorkShift Calc",
    "version": "1.0.0",
    "description": "Smart shift calculator and attendance log analyzer",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "pwa-192x192.png",
            "48": "pwa-192x192.png",
            "128": "pwa-512x512.png"
        }
    },
    "icons": {
        "16": "pwa-192x192.png",
        "48": "pwa-192x192.png",
        "128": "pwa-512x512.png"
    },
    "permissions": [
        "storage"
    ]
}